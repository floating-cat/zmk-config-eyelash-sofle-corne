// forked from https://github.com/urob/zmk-config/blob/9f386d209657a1aefc625633bda13f5a091ea465/config/combos.dtsi
/*                KEY POSITIONS

  ╭─────────────────────╮ ╭─────────────────────╮
  │ LT4 LT3 LT2 LT1 LT0 │ │ RT0 RT1 RT2 RT3 RT4 │
  │ LM4 LM3 LM2 LM1 LM0 │ │ RM0 RM1 RM2 RM3 RM4 │
  │ LB4 LB3 LB2 LB1 LB0 │ │ RB0 RB1 RB2 RB3 RB4 │
  ╰───────╮ LH2 LH1 LH0 │ │ RH0 RH1 RH2 ╭───────╯
          ╰─────────────╯ ╰─────────────╯ */

#define COMBO_TERM_FAST 35
#define COMBO_TERM_SLOW 50
#define COMBO_TERM_VERY_SLOW 75

#define COMBO_IDLE_FAST 150
#define COMBO_IDLE_SLOW 50

/* Horizontal combos - left hand */
ZMK_COMBO(leftsys,  &sl SYS,       LT4 LT3 LT2 LT1, BASE NUM FN NAV MOUSE, COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(esc,      &kp ESC,       LM3 LM2,         BASE NUM FN NAV MOUSE, COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(bspc,     &kp BSPC,      LM2 LM1,         BASE NUM FN NAV MOUSE, COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(del,      &kp DEL,       LM3 LM2 LM1,     BASE NUM FN NAV MOUSE, COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(sftdel,   &kp LS(DEL),   LM4 LM3 LM2 LM1, BASE NUM FN NAV MOUSE, COMBO_TERM_FAST, COMBO_IDLE_FAST)

ZMK_COMBO(sel_all,  &kp LC(A),     LB4 LB1,         BASE NUM FN NAV MOUSE, COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(undo,     &kp LC(Z),     LB4 LB3,         BASE NUM FN NAV MOUSE, COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(redo,     &kp LC(LS(Z)), LB4 LB3 LB2,     BASE NUM FN NAV MOUSE, COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(cut,      &kp LC(X),     LB3 LB1,         BASE NUM FN NAV MOUSE, COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(copy,     &kp LC(C),     LB3 LB2,         BASE NUM FN NAV MOUSE, COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(paste,    &kp LC(V),     LB2 LB1,         BASE NUM FN NAV MOUSE, COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(sftpaste, &kp LS(LC(V)), LB3 LB2 LB1,     BASE NUM FN NAV MOUSE, COMBO_TERM_FAST, COMBO_IDLE_FAST)

ZMK_COMBO(num,      &num_word NUM, LH1 LB0,         BASE NUM FN NAV MOUSE, COMBO_TERM_FAST, COMBO_IDLE_FAST)

/* Horizontal combos - right hand */
ZMK_COMBO(rightsys, &sl SYS,       RT1 RT2 RT3 RT4, BASE NUM FN NAV MOUSE, COMBO_TERM_FAST, COMBO_IDLE_FAST)
